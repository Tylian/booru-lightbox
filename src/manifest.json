{
    "manifest_version": 2,
    "name": "Booru Lightbox",
    "version": "<%= pkg.version %>",
    "description": "<%= pkg.description %>",
    "icons": {
        "48": "img/icon-48.png",
        "96": "img/icon-96.png"
    },
    "applications": {
        "gecko": {
            "id": "booru-lightbox@tylian.net",
            "update_url": "https://tylian.net/lightbox/updates.json"
        }
    },
    "web_accessible_resources": ["img/unsupported.png"],
    "content_scripts": [
        {
            "matches": ["*://*.gelbooru.com/*", "*://*.rule34.xxx/*"],
            "css": ["style.css"],
            "js": ["BooruLightbox.js", "gelbooru.js"]
        },
        {
            "matches": ["*://*.e621.net/*", "*://*.e926.net/*"],
            "css": ["style.css"],
            "js": ["BooruLightbox.js", "ouroboros.js"]
        },
        {
            "matches": ["*://*.danbooru.donmai.us/*"],
            "css": ["style.css"],
            "js": ["BooruLightbox.js", "danbooru.js"]
        }
    ]
}